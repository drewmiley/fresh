# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /helloworld                                    controllers.HomeController.index()
GET     /helloworld/explore                            controllers.HomeController.explore()
GET     /helloworld/tutorial                           controllers.HomeController.tutorial()

# Home page
GET     /widgets                            controllers.WidgetController.index

# Widgets
GET     /widgets/widgets                    controllers.WidgetController.listWidgets
POST    /widgets/widgets                    controllers.WidgetController.createWidget


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
