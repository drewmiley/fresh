# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /fresh                                    controllers.FreshController.index()

# An example controller showing a sample home page
GET     /helloworld                                    controllers.HelloWorldHomeController.index()
GET     /helloworld/explore                            controllers.HelloWorldHomeController.explore()
GET     /helloworld/tutorial                           controllers.HelloWorldHomeController.tutorial()

# Home page
GET     /widgets                            controllers.WidgetController.index

# Widgets
GET     /widgets/widgets                    controllers.WidgetController.listWidgets
POST    /widgets/widgets                    controllers.WidgetController.createWidget


GET        /streaming                                    controllers.StreamingHomeController.index()

GET        /streaming/scala/comet                        controllers.ScalaCometController.index()
GET        /streaming/scala/comet/liveClock              controllers.ScalaCometController.streamClock()

GET        /streaming/scala/eventSource                  controllers.ScalaEventSourceController.index()
GET        /streaming/scala/eventSource/liveClock        controllers.ScalaEventSourceController.streamClock()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
